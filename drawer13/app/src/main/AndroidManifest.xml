<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jazzLibraryΑctivities">

    <uses-permission android:name="android.permission.INTERNET" ></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Drawer13">


        <activity
            android:name="com.example.jazzLibraryΑctivities.SplashScreenActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.example.jazzLibraryΑctivities.jazzLibraryAppMainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Drawer13.NoActionBar"
            android:configChanges="orientation|keyboardHidden|smallestScreenSize|screenLayout"
            >
        </activity>




    </application>

</manifest>